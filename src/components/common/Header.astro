---
/**
 * サイト共通ヘッダー
 * - 固定ヘッダー（backdrop-blur）
 * - ロゴ / ナビ（サービスはドロップダウン）/ 電話番号 / お問い合わせボタン
 * - モバイル: ハンバーガーメニュー
 */

interface SubNavItem {
  label: string;
  href: string;
}

interface NavItem {
  label: string;
  href: string;
  children?: SubNavItem[];
}

const serviceChildren: SubNavItem[] = [
  { label: '福祉用具レンタル', href: '/rental' },
  { label: '福祉用具販売', href: '/sale' },
  { label: '住宅改修', href: '/renovation' },
  { label: 'オンラインサポート', href: '/online-support' },
];

const navItems: NavItem[] = [
  { label: 'はじめての方へ', href: '/first' },
  { label: 'サービス', href: '/services', children: serviceChildren },
  { label: 'よくある質問', href: '/faq' },
  { label: '会社について', href: '/about' },
  { label: '採用情報', href: '/recruit' },
  { label: 'お知らせ', href: '/news' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="header-inner">
    <!-- ロゴ -->
    <a href="/" class="logo-wrap" aria-label="トップページへ">
      <img
        src="/images/common/logo.png"
        alt="株式会社後藤 福祉事業部つなぐ"
        class="logo-img"
        width="120"
        height="36"
      />
      <div class="logo-divider" aria-hidden="true"></div>
      <span class="logo-text">
        福祉事業部 つなぐ
        <span class="logo-address">富山県高岡市木津769-1</span>
      </span>
    </a>

    <!-- PC ナビゲーション -->
    <nav class="nav-desktop" aria-label="メインナビゲーション">
      {navItems.map((item) =>
        item.children ? (
          <div class="nav-dropdown">
            <a
              href={item.href}
              class:list={['nav-link', 'has-dropdown', { active: currentPath.startsWith('/services') || currentPath.startsWith('/rental') || currentPath.startsWith('/sale') || currentPath.startsWith('/renovation') || currentPath.startsWith('/online-support') }]}
            >
              {item.label}
              <svg class="dropdown-chevron" width="12" height="12" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6z" />
              </svg>
            </a>
            <div class="dropdown-menu">
              <a href={item.href} class="dropdown-item dropdown-item-all">
                サービス一覧
              </a>
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class:list={['dropdown-item', { active: currentPath === child.href }]}
                >
                  {child.label}
                </a>
              ))}
            </div>
          </div>
        ) : (
          <a
            href={item.href}
            class:list={['nav-link', { active: currentPath === item.href }]}
          >
            {item.label}
          </a>
        )
      )}
    </nav>

    <!-- 電話 & お問い合わせ -->
    <div class="header-right">
      <div class="header-tel">
        <span class="header-tel-label">お電話でのご相談</span>
        <a href="tel:0766-75-8008" class="header-tel-num">
          <svg class="icon-phone" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M6.6 10.8c1.4 2.8 3.8 5.1 6.6 6.6l2.2-2.2c.3-.3.7-.4 1-.2 1.1.4 2.3.6 3.6.6.6 0 1 .4 1 1V20c0 .6-.4 1-1 1-9.4 0-17-7.6-17-17 0-.6.4-1 1-1h3.5c.6 0 1 .4 1 1 0 1.3.2 2.5.6 3.6.1.3 0 .7-.2 1L6.6 10.8z" />
          </svg>
          0766-75-8008
        </a>
      </div>
      <a href="/contact" class="btn-contact">
        <svg class="icon-mail" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
        </svg>
        お問い合わせ
      </a>
    </div>

    <!-- モバイル ハンバーガー -->
    <button
      class="hamburger"
      type="button"
      aria-label="メニューを開く"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="hamburger-line" aria-hidden="true"></span>
      <span class="hamburger-line" aria-hidden="true"></span>
      <span class="hamburger-line" aria-hidden="true"></span>
    </button>
  </div>

  <!-- モバイル メニュー -->
  <div id="mobile-menu" class="mobile-menu" aria-hidden="true">
    <nav aria-label="モバイルナビゲーション">
      {navItems.map((item) => (
        <>
          <a
            href={item.href}
            class:list={['mobile-nav-link', { active: currentPath === item.href }]}
          >
            {item.label}
          </a>
          {item.children && (
            <div class="mobile-sub-links">
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class:list={['mobile-sub-link', { active: currentPath === child.href }]}
                >
                  {child.label}
                </a>
              ))}
            </div>
          )}
        </>
      ))}
    </nav>
    <div class="mobile-menu-footer">
      <a href="tel:0766-75-8008" class="mobile-tel">
        <svg class="icon-phone" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M6.6 10.8c1.4 2.8 3.8 5.1 6.6 6.6l2.2-2.2c.3-.3.7-.4 1-.2 1.1.4 2.3.6 3.6.6.6 0 1 .4 1 1V20c0 .6-.4 1-1 1-9.4 0-17-7.6-17-17 0-.6.4-1 1-1h3.5c.6 0 1 .4 1 1 0 1.3.2 2.5.6 3.6.1.3 0 .7-.2 1L6.6 10.8z" />
        </svg>
        0766-75-8008
      </a>
      <a href="/contact" class="mobile-contact-btn">
        お問い合わせ
      </a>
    </div>
  </div>
</header>

<style>
  /* === Header === */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(245, 247, 250, 0.94);
    backdrop-filter: blur(14px);
    border-bottom: 1px solid var(--color-border);
  }

  .header-inner {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 32px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 24px;
  }

  /* === Logo === */
  .logo-wrap {
    display: flex;
    align-items: center;
    gap: 14px;
    flex-shrink: 0;
  }

  .logo-img {
    height: 36px;
    width: auto;
  }

  .logo-divider {
    width: 1px;
    height: 28px;
    background: var(--color-border);
  }

  .logo-text {
    font-family: var(--font-serif-jp);
    font-size: 12px;
    color: var(--color-primary);
    line-height: 1.5;
    letter-spacing: 0.04em;
  }

  .logo-address {
    display: block;
    font-size: 10px;
    color: var(--color-text-lt);
    font-family: var(--font-body);
    letter-spacing: 0.02em;
  }

  /* === Desktop Nav === */
  .nav-desktop {
    display: flex;
    align-items: center;
    gap: 2px;
  }

  .nav-link {
    font-size: 13px;
    color: var(--color-text-mid);
    padding: 6px 11px;
    border-radius: var(--radius-sm);
    transition: var(--transition-base);
    white-space: nowrap;
    letter-spacing: 0.02em;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-primary);
    background: rgba(0, 32, 96, 0.05);
  }

  /* === Dropdown === */
  .nav-dropdown {
    position: relative;
  }

  .has-dropdown {
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  .dropdown-chevron {
    transition: transform 0.2s ease;
  }

  .nav-dropdown:hover .dropdown-chevron {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    min-width: 200px;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
    padding: 8px;
    opacity: 0;
    visibility: hidden;
    transform: translateX(-50%) translateY(8px);
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
    z-index: 110;
  }

  .nav-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  /* ホバー領域のギャップを埋める不可視ブリッジ */
  .nav-dropdown::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    height: 8px;
  }

  .dropdown-item {
    display: block;
    padding: 10px 16px;
    font-size: 13px;
    color: var(--color-text-mid);
    border-radius: var(--radius-sm);
    transition: var(--transition-base);
    white-space: nowrap;
  }

  .dropdown-item:hover,
  .dropdown-item.active {
    color: var(--color-primary);
    background: rgba(0, 32, 96, 0.05);
  }

  .dropdown-item-all {
    font-size: 12px;
    color: var(--color-text-lt);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 4px;
    padding-bottom: 10px;
  }

  /* === Header Right === */
  .header-right {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-shrink: 0;
  }

  .header-tel {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 2px;
  }

  .header-tel-label {
    font-size: 10px;
    color: var(--color-text-lt);
    letter-spacing: 0.06em;
  }

  .header-tel-num {
    font-family: var(--font-serif);
    font-size: 19px;
    color: var(--color-primary);
    letter-spacing: 0.04em;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .icon-phone,
  .icon-mail {
    width: 1em;
    height: 1em;
    fill: currentColor;
    flex-shrink: 0;
  }

  .btn-contact {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--color-primary);
    color: white;
    padding: 10px 20px;
    border-radius: var(--radius-sm);
    font-size: 13px;
    letter-spacing: 0.06em;
    transition: var(--transition-base);
  }

  .btn-contact:hover {
    background: var(--color-primary-lt);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  /* === Hamburger === */
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    padding: 8px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 110;
  }

  .hamburger-line {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
    transition: var(--transition-base);
    transform-origin: center;
  }

  .hamburger[aria-expanded='true'] .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .hamburger[aria-expanded='true'] .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger[aria-expanded='true'] .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* === Mobile Menu === */
  .mobile-menu {
    display: flex;
    flex-direction: column;
    position: fixed;
    top: 72px;
    left: 0;
    right: 0;
    /* dvh: ブラウザUIを除いた実際の表示領域に追従（iOS Safari対応） */
    height: calc(100vh - 72px);
    height: calc(100dvh - 72px);
    background: rgba(245, 247, 250, 0.98);
    backdrop-filter: blur(14px);
    padding: 24px 32px calc(32px + env(safe-area-inset-bottom));
    overflow-y: auto;
    z-index: 99;
    /* アニメーション用: 非表示状態 */
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    pointer-events: none;
    transition:
      opacity 0.25s ease,
      transform 0.25s ease,
      visibility 0s 0.25s;
  }

  .mobile-menu[aria-hidden='false'] {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
    transition:
      opacity 0.25s ease,
      transform 0.25s ease,
      visibility 0s 0s;
  }

  .mobile-menu nav {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .mobile-nav-link {
    display: block;
    font-size: 15px;
    color: var(--color-text-mid);
    padding: 14px 16px;
    border-radius: var(--radius-sm);
    transition: var(--transition-base);
    border-bottom: 1px solid var(--color-border);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link.active {
    color: var(--color-primary);
    background: rgba(0, 32, 96, 0.05);
  }

  .mobile-sub-links {
    display: flex;
    flex-direction: column;
    padding-left: 20px;
    gap: 2px;
    margin-bottom: 4px;
  }

  .mobile-sub-link {
    display: block;
    font-size: 13px;
    color: var(--color-text-lt);
    padding: 10px 16px;
    border-radius: var(--radius-sm);
    transition: var(--transition-base);
    border-left: 2px solid var(--color-border);
  }

  .mobile-sub-link:hover,
  .mobile-sub-link.active {
    color: var(--color-primary);
    background: rgba(0, 32, 96, 0.05);
    border-left-color: var(--color-accent);
  }

  .mobile-menu-footer {
    margin-top: auto;
    padding-top: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .mobile-tel {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-family: var(--font-serif);
    font-size: 22px;
    color: var(--color-primary);
    padding: 12px;
  }

  .mobile-contact-btn {
    display: block;
    text-align: center;
    background: var(--color-primary);
    color: white;
    padding: 16px;
    border-radius: var(--radius-sm);
    font-size: 15px;
    letter-spacing: 0.06em;
    transition: var(--transition-base);
  }

  .mobile-contact-btn:hover {
    background: var(--color-primary-lt);
  }

  /* === Responsive === */
  @media (max-width: 1024px) {
    .nav-desktop,
    .header-right {
      display: none;
    }

    .hamburger {
      display: flex;
    }
  }

  @media (max-width: 640px) {
    .header-inner {
      padding: 0 16px;
    }

    .logo-divider,
    .logo-text {
      display: none;
    }
  }
</style>

<script>
  const hamburger = document.querySelector<HTMLButtonElement>('.hamburger');
  const mobileMenu = document.getElementById('mobile-menu');

  if (hamburger && mobileMenu) {
    // ネスト関数内でも型が確定するようにローカル変数に代入
    const btn = hamburger;
    const menu = mobileMenu;
    let savedScrollY = 0;

    function openMenu(): void {
      savedScrollY = window.scrollY;
      btn.setAttribute('aria-expanded', 'true');
      btn.setAttribute('aria-label', 'メニューを閉じる');
      menu.setAttribute('aria-hidden', 'false');
      // iOS Safari でも背景スクロールを止める
      document.body.style.overflow = 'hidden';
      document.body.style.position = 'fixed';
      document.body.style.top = `-${savedScrollY}px`;
      document.body.style.width = '100%';
    }

    function closeMenu(): void {
      btn.setAttribute('aria-expanded', 'false');
      btn.setAttribute('aria-label', 'メニューを開く');
      menu.setAttribute('aria-hidden', 'true');
      // スクロール位置を復元
      document.body.style.overflow = '';
      document.body.style.position = '';
      document.body.style.top = '';
      document.body.style.width = '';
      window.scrollTo(0, savedScrollY);
    }

    btn.addEventListener('click', () => {
      if (btn.getAttribute('aria-expanded') === 'true') {
        closeMenu();
      } else {
        openMenu();
      }
    });

    menu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', closeMenu);
    });

    document.addEventListener('keydown', (e: KeyboardEvent) => {
      if (e.key === 'Escape' && btn.getAttribute('aria-expanded') === 'true') {
        closeMenu();
        btn.focus();
      }
    });
  }
</script>
