---
/**
 * お知らせセクション
 * microCMSからニュースを取得（未設定時はダミーデータ）
 */
import { getNewsList } from '../../lib/microcms';

const { contents: newsItems } = await getNewsList({ limit: 5, orders: '-publishedAt' });

/** 日付フォーマット: 2025-02-01T00:00:00.000Z → 2025.02.01 */
function formatDate(dateStr: string): string {
  const d = new Date(dateStr);
  const y = d.getFullYear();
  const m = String(d.getMonth() + 1).padStart(2, '0');
  const day = String(d.getDate()).padStart(2, '0');
  return `${y}.${m}.${day}`;
}
---

<section class="section news-section">
  <div class="container">
    <div class="news-layout">
      <div class="news-sidebar">
        <span class="section-label">News</span>
        <h2 class="news-heading">お知らせ</h2>
        <p class="news-sub">新着情報・イベント・<br />サービスのご案内</p>
        <a href="/news" class="btn-see-all">
          一覧を見る
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6z" />
          </svg>
        </a>
      </div>
      <div class="news-list fade-up">
        {newsItems.map((item) => (
          <a href={`/news/${item.id}`} class="news-item">
            <time class="news-date">{formatDate(item.publishedAt ?? item.createdAt)}</time>
            <span class="news-category">{item.category}</span>
            <p class="news-title">{item.title}</p>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .news-section { background: white; }

  .news-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 60px;
    align-items: start;
  }

  .news-sidebar { padding-top: 8px; }

  .news-heading {
    font-family: var(--font-serif);
    font-size: clamp(22px, 2.8vw, 32px);
    color: var(--color-primary);
    line-height: 1.2;
  }

  .news-sub {
    font-size: 13px;
    color: var(--color-text-lt);
    margin-top: 8px;
    margin-bottom: 28px;
    line-height: 1.7;
  }

  .btn-see-all {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--color-primary);
    border: 1.5px solid var(--color-primary);
    padding: 10px 22px;
    border-radius: var(--radius-sm);
    transition: var(--transition-base);
    letter-spacing: 0.04em;
  }

  .btn-see-all:hover { background: rgba(0, 32, 96, 0.05); }

  .news-list { display: flex; flex-direction: column; }

  .news-item {
    display: grid;
    grid-template-columns: 90px 70px 1fr;
    align-items: start;
    gap: 16px;
    padding: 18px 0;
    border-bottom: 1px solid var(--color-border);
    transition: var(--transition-base);
  }

  .news-item:first-child { border-top: 1px solid var(--color-border); }
  .news-item:hover { padding-left: 8px; }

  .news-date {
    font-family: var(--font-serif);
    font-size: 12px;
    color: var(--color-text-lt);
    white-space: nowrap;
    font-style: italic;
    padding-top: 2px;
  }

  .news-category {
    display: inline-block;
    font-size: 10px;
    letter-spacing: 0.08em;
    color: white;
    background: var(--color-primary);
    padding: 3px 8px;
    border-radius: 2px;
  }

  .news-title {
    font-size: 13px;
    color: var(--color-text-mid);
    line-height: 1.65;
  }

  /* === Responsive === */
  @media (max-width: 768px) {
    .news-layout {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .news-item {
      grid-template-columns: 1fr;
      gap: 6px;
    }

    .news-item:hover { padding-left: 0; }

    .news-date { font-size: 11px; }
  }
</style>
