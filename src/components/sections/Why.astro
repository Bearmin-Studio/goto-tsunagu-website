---
/**
 * 選ばれる理由セクション（3カード）
 */

interface WhyCard {
  number: string;
  title: string;
  desc: string;
  iconPath: string;
}

const reasons: WhyCard[] = [
  {
    number: '01',
    title: '地域密着・スピーディな対応',
    desc: '富山県呉西地区を中心に、「手すり一本」からの小さなお困りごとにも迅速に対応。地域に根ざしているからこそできる、きめ細やかなサービスを提供します。',
    iconPath: 'M7 2v11h3v9l7-12h-4l4-8z',
  },
  {
    number: '02',
    title: '専門資格を持つスタッフ',
    desc: '福祉用具専門相談員・福祉住環境コーディネーターが在籍。利用者様の身体状況や生活環境に合わせた、的確なご提案をいたします。',
    iconPath: 'M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 4l5 2.18V11c0 3.5-2.33 6.79-5 7.93C9.33 17.79 7 14.5 7 11V7.18L12 5z',
  },
  {
    number: '03',
    title: '相談・お見積り無料',
    desc: '初めての方でも安心してご相談いただけるよう、訪問相談・お見積りはすべて無料です。介護保険の申請手続きのサポートも承ります。',
    iconPath: 'M20 6h-2.18c.07-.26.18-.51.18-.82 0-1.65-1.35-3-3-3-1.02 0-1.96.54-2.5 1.35l-.5.67-.5-.68C10.96 2.54 10.02 2 9 2 7.35 2 6 3.35 6 5c0 .29.07.56.18.82H4c-1.11 0-1.99.89-1.99 2L2 20c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 16H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v7z',
  },
];
---

<section class="section why-section">
  <div class="container">
    <span class="section-label">Why Tsunagu</span>
    <h2 class="section-title">"つなぐ"が選ばれる理由</h2>
    <p class="section-subtitle">地域に根ざした、3つの強み</p>

    <div class="why-grid">
      {reasons.map((r) => (
        <div class="why-card fade-up">
          <div class="why-icon" aria-hidden="true">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
              <path d={r.iconPath} />
            </svg>
          </div>
          <p class="why-number">{r.number}</p>
          <h3 class="why-card-title">{r.title}</h3>
          <p class="why-card-desc">{r.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .why-section { background: white; }

  .why-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 28px;
  }

  .why-card {
    padding: 40px 30px;
    border-radius: var(--radius-md);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    transition: var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .why-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 3px;
    background: linear-gradient(to right, var(--color-accent), transparent);
  }

  .why-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .why-icon {
    width: 56px;
    height: 56px;
    background: var(--color-accent-lt);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    margin-bottom: 20px;
  }

  .why-number {
    font-family: var(--font-serif);
    font-size: 13px;
    color: var(--color-accent);
    letter-spacing: 0.1em;
    margin-bottom: 8px;
  }

  .why-card-title {
    font-family: var(--font-serif-jp);
    font-size: 17px;
    font-weight: 400;
    color: var(--color-primary);
    margin-bottom: 12px;
    letter-spacing: 0.04em;
  }

  .why-card-desc {
    font-size: 13px;
    color: var(--color-text-mid);
    line-height: 1.85;
  }

  /* === Responsive === */
  @media (max-width: 768px) {
    .why-grid { grid-template-columns: 1fr; }
  }
</style>
