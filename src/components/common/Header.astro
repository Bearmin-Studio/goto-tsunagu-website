---
/**
 * サイト共通ヘッダー
 * - 固定ヘッダー（backdrop-blur）
 * - ロゴ / ナビ / 電話番号 / お問い合わせボタン
 * - モバイル: ハンバーガーメニュー
 */

interface NavItem {
  label: string;
  href: string;
}

const navItems: NavItem[] = [
  { label: 'はじめての方へ', href: '/first' },
  { label: 'サービス', href: '/services' },
  { label: '住宅改修', href: '/renovation' },
  { label: 'よくある質問', href: '/faq' },
  { label: '会社について', href: '/about' },
  { label: '採用情報', href: '/recruit' },
  { label: 'お知らせ', href: '/news' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="header-inner">
    <!-- ロゴ -->
    <a href="/" class="logo-wrap" aria-label="トップページへ">
      <img
        src="https://goto-t.co.jp/wp-content/uploads/2023/10/logo.png"
        alt="株式会社後藤 福祉事業部つなぐ"
        class="logo-img"
        width="120"
        height="36"
      />
      <div class="logo-divider" aria-hidden="true"></div>
      <span class="logo-text">
        福祉事業部 つなぐ
        <span class="logo-address">富山県高岡市木津769-1</span>
      </span>
    </a>

    <!-- PC ナビゲーション -->
    <nav class="nav-desktop" aria-label="メインナビゲーション">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={['nav-link', { active: currentPath === item.href }]}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <!-- 電話 & お問い合わせ -->
    <div class="header-right">
      <div class="header-tel">
        <span class="header-tel-label">お電話でのご相談</span>
        <a href="tel:0766-50-1555" class="header-tel-num">
          <svg class="icon-phone" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M6.6 10.8c1.4 2.8 3.8 5.1 6.6 6.6l2.2-2.2c.3-.3.7-.4 1-.2 1.1.4 2.3.6 3.6.6.6 0 1 .4 1 1V20c0 .6-.4 1-1 1-9.4 0-17-7.6-17-17 0-.6.4-1 1-1h3.5c.6 0 1 .4 1 1 0 1.3.2 2.5.6 3.6.1.3 0 .7-.2 1L6.6 10.8z" />
          </svg>
          0766-50-1555
        </a>
      </div>
      <a href="/contact" class="btn-contact">
        <svg class="icon-mail" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
        </svg>
        お問い合わせ
      </a>
    </div>

    <!-- モバイル ハンバーガー -->
    <button
      class="hamburger"
      type="button"
      aria-label="メニューを開く"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="hamburger-line" aria-hidden="true"></span>
      <span class="hamburger-line" aria-hidden="true"></span>
      <span class="hamburger-line" aria-hidden="true"></span>
    </button>
  </div>

  <!-- モバイル メニュー -->
  <div id="mobile-menu" class="mobile-menu" aria-hidden="true">
    <nav aria-label="モバイルナビゲーション">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={['mobile-nav-link', { active: currentPath === item.href }]}
        >
          {item.label}
        </a>
      ))}
    </nav>
    <div class="mobile-menu-footer">
      <a href="tel:0766-50-1555" class="mobile-tel">
        <svg class="icon-phone" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M6.6 10.8c1.4 2.8 3.8 5.1 6.6 6.6l2.2-2.2c.3-.3.7-.4 1-.2 1.1.4 2.3.6 3.6.6.6 0 1 .4 1 1V20c0 .6-.4 1-1 1-9.4 0-17-7.6-17-17 0-.6.4-1 1-1h3.5c.6 0 1 .4 1 1 0 1.3.2 2.5.6 3.6.1.3 0 .7-.2 1L6.6 10.8z" />
        </svg>
        0766-50-1555
      </a>
      <a href="/contact" class="mobile-contact-btn">
        お問い合わせ
      </a>
    </div>
  </div>
</header>

<style>
  /* === Header === */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(245, 247, 250, 0.94);
    backdrop-filter: blur(14px);
    border-bottom: 1px solid var(--color-border);
  }

  .header-inner {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 32px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 24px;
  }

  /* === Logo === */
  .logo-wrap {
    display: flex;
    align-items: center;
    gap: 14px;
    flex-shrink: 0;
  }

  .logo-img {
    height: 36px;
    width: auto;
  }

  .logo-divider {
    width: 1px;
    height: 28px;
    background: var(--color-border);
  }

  .logo-text {
    font-family: var(--font-serif-jp);
    font-size: 12px;
    color: var(--color-primary);
    line-height: 1.5;
    letter-spacing: 0.04em;
  }

  .logo-address {
    display: block;
    font-size: 10px;
    color: var(--color-text-lt);
    font-family: var(--font-body);
    letter-spacing: 0.02em;
  }

  /* === Desktop Nav === */
  .nav-desktop {
    display: flex;
    align-items: center;
    gap: 2px;
  }

  .nav-link {
    font-size: 13px;
    color: var(--color-text-mid);
    padding: 6px 11px;
    border-radius: var(--radius-sm);
    transition: var(--transition-base);
    white-space: nowrap;
    letter-spacing: 0.02em;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-primary);
    background: rgba(0, 32, 96, 0.05);
  }

  /* === Header Right === */
  .header-right {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-shrink: 0;
  }

  .header-tel {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 2px;
  }

  .header-tel-label {
    font-size: 10px;
    color: var(--color-text-lt);
    letter-spacing: 0.06em;
  }

  .header-tel-num {
    font-family: var(--font-serif);
    font-size: 19px;
    color: var(--color-primary);
    letter-spacing: 0.04em;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .icon-phone,
  .icon-mail {
    width: 1em;
    height: 1em;
    fill: currentColor;
    flex-shrink: 0;
  }

  .btn-contact {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--color-primary);
    color: white;
    padding: 10px 20px;
    border-radius: var(--radius-sm);
    font-size: 13px;
    letter-spacing: 0.06em;
    transition: var(--transition-base);
  }

  .btn-contact:hover {
    background: var(--color-primary-lt);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  /* === Hamburger === */
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    padding: 8px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 110;
  }

  .hamburger-line {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
    transition: var(--transition-base);
    transform-origin: center;
  }

  .hamburger[aria-expanded='true'] .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .hamburger[aria-expanded='true'] .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger[aria-expanded='true'] .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* === Mobile Menu === */
  .mobile-menu {
    display: none;
    position: fixed;
    top: 72px;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(245, 247, 250, 0.98);
    backdrop-filter: blur(14px);
    padding: 24px 32px 32px;
    overflow-y: auto;
    flex-direction: column;
    z-index: 99;
  }

  .mobile-menu[aria-hidden='false'] {
    display: flex;
  }

  .mobile-menu nav {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .mobile-nav-link {
    display: block;
    font-size: 15px;
    color: var(--color-text-mid);
    padding: 14px 16px;
    border-radius: var(--radius-sm);
    transition: var(--transition-base);
    border-bottom: 1px solid var(--color-border);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link.active {
    color: var(--color-primary);
    background: rgba(0, 32, 96, 0.05);
  }

  .mobile-menu-footer {
    margin-top: auto;
    padding-top: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .mobile-tel {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-family: var(--font-serif);
    font-size: 22px;
    color: var(--color-primary);
    padding: 12px;
  }

  .mobile-contact-btn {
    display: block;
    text-align: center;
    background: var(--color-primary);
    color: white;
    padding: 16px;
    border-radius: var(--radius-sm);
    font-size: 15px;
    letter-spacing: 0.06em;
    transition: var(--transition-base);
  }

  .mobile-contact-btn:hover {
    background: var(--color-primary-lt);
  }

  /* === Responsive === */
  @media (max-width: 1024px) {
    .nav-desktop,
    .header-right {
      display: none;
    }

    .hamburger {
      display: flex;
    }
  }

  @media (max-width: 640px) {
    .header-inner {
      padding: 0 16px;
    }

    .logo-divider,
    .logo-text {
      display: none;
    }
  }
</style>

<script>
  const hamburger = document.querySelector('.hamburger');
  const mobileMenu = document.getElementById('mobile-menu');

  hamburger?.addEventListener('click', () => {
    const isOpen = hamburger.getAttribute('aria-expanded') === 'true';
    hamburger.setAttribute('aria-expanded', String(!isOpen));
    hamburger.setAttribute('aria-label', isOpen ? 'メニューを開く' : 'メニューを閉じる');
    mobileMenu?.setAttribute('aria-hidden', String(isOpen));
    document.body.style.overflow = isOpen ? '' : 'hidden';
  });

  /* メニューリンククリックで閉じる */
  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      hamburger?.setAttribute('aria-expanded', 'false');
      hamburger?.setAttribute('aria-label', 'メニューを開く');
      mobileMenu.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    });
  });
</script>
