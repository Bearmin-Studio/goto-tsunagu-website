---
/**
 * サービス一覧セクション
 * 4つのサービスカード（レンタル=大カード、他3つ=通常カード）
 */

interface ServiceCard {
  href: string;
  tag: string;
  tagEn: string;
  title: string;
  desc: string;
  linkText: string;
  imgSrc: string;
  imgAlt: string;
  featured?: boolean;
  contain?: boolean;
  iconPath: string;
}

const services: ServiceCard[] = [
  {
