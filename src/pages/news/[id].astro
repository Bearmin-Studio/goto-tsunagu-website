---
/**
 * お知らせ詳細ページ
 * SSG: getStaticPathsで全記事のパスを生成
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getNewsList, getNewsDetail } from '../../lib/microcms';

export async function getStaticPaths() {
  const { contents } = await getNewsList({ limit: 100, fields: 'id' });
  return contents.map((item) => ({
    params: { id: item.id },
  }));
}

const { id } = Astro.params;
const news = await getNewsDetail(id as string);

function formatDate(dateStr: string): string {
  const d = new Date(dateStr);
  const y = d.getFullYear();
  const m = String(d.getMonth() + 1).padStart(2, '0');
  const day = String(d.getDate()).padStart(2, '0');
  return `${y}.${m}.${day}`;
}
---

<BaseLayout title={`${news.title} | お知らせ | 株式会社後藤 福祉事業部 つなぐ`}>
  <main class="page-news-detail">
    <div class="page-header">
      <div class="container">
        <a href="/news" class="back-link">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6z" />
          </svg>
          お知らせ一覧へ
        </a>
      </div>
    </div>

    <article class="section">
      <div class="article-container">
        <div class="article-meta">
          <time class="article-date">{formatDate(news.publishedAt ?? news.createdAt)}</time>
          <span class="article-category">{news.category}</span>
        </div>
        <h1 class="article-title">{news.title}</h1>
        <div class="article-body" set:html={news.content} />
        <div class="article-footer">
          <a href="/news" class="btn-back">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6z" />
            </svg>
            お知らせ一覧へ戻る
          </a>
        </div>
      </div>
    </article>
  </main>
</BaseLayout>

<style>
  .page-header {
    padding: 96px 32px 24px;
    background: var(--color-bg2);
    border-bottom: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: var(--color-text-lt);
    transition: var(--transition-base);
  }

  .back-link:hover { color: var(--color-primary); }

  .article-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
  }

  .article-date {
    font-family: var(--font-serif);
    font-size: 14px;
    color: var(--color-text-lt);
    font-style: italic;
  }

  .article-category {
    display: inline-block;
    font-size: 10px;
    letter-spacing: 0.08em;
    color: white;
    background: var(--color-primary);
    padding: 3px 10px;
    border-radius: 2px;
  }

  .article-title {
    font-family: var(--font-serif-jp);
    font-size: clamp(22px, 3vw, 32px);
    font-weight: 400;
    color: var(--color-primary);
    line-height: 1.5;
    margin-bottom: 40px;
    padding-bottom: 24px;
    border-bottom: 1px solid var(--color-border);
  }

  .article-body {
    font-size: 15px;
    color: var(--color-text-mid);
    line-height: 2.0;
  }

  .article-body :global(p) {
    margin-bottom: 1.5em;
  }

  .article-body :global(h2) {
    font-family: var(--font-serif-jp);
    font-size: 20px;
    font-weight: 400;
    color: var(--color-primary);
    margin: 2em 0 1em;
    padding-left: 16px;
    border-left: 3px solid var(--color-accent);
  }

  .article-body :global(h3) {
    font-size: 17px;
    font-weight: 500;
    color: var(--color-primary);
    margin: 1.5em 0 0.8em;
  }

  .article-body :global(ul),
  .article-body :global(ol) {
    padding-left: 1.5em;
    margin-bottom: 1.5em;
  }

  .article-body :global(li) {
    margin-bottom: 0.5em;
  }

  .article-body :global(img) {
    border-radius: var(--radius-md);
    margin: 1.5em 0;
  }

  .article-footer {
    margin-top: 56px;
    padding-top: 32px;
    border-top: 1px solid var(--color-border);
  }

  .btn-back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--color-primary);
    border: 1.5px solid var(--color-primary);
    padding: 12px 24px;
    border-radius: var(--radius-sm);
    transition: var(--transition-base);
  }

  .btn-back:hover {
    background: rgba(0, 32, 96, 0.05);
  }

  @media (max-width: 640px) {
    .page-header { padding: 88px 16px 20px; }
  }
</style>
