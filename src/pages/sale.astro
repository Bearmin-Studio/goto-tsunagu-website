---
/**
 * 福祉用具販売ページ
 */
import BaseLayout from '../layouts/BaseLayout.astro';

interface SaleItem {
  name: string;
  desc: string;
  priceRange: string;
}

const saleItems: SaleItem[] = [
  { name: '腰掛便座', desc: '和式便器の上に置いて腰掛式に変えるもの、洋式便器の上に置いて高さを補うもの、ポータブルトイレなど。', priceRange: '5,000〜40,000円' },
  { name: '入浴補助用具', desc: '入浴用いす、浴槽用手すり、浴槽内いす、入浴台、浴室内すのこ、浴槽内すのこ。', priceRange: '3,000〜30,000円' },
  { name: '簡易浴槽', desc: '居室で入浴するための空気式・折りたたみ式の浴槽。', priceRange: '20,000〜50,000円' },
  { name: '移動用リフトのつり具', desc: '移動用リフトに装着して身体を支えるつり具部分。', priceRange: '5,000〜30,000円' },
  { name: '排泄予測支援機器', desc: '膀胱内の尿量を感知し排泄のタイミングを知らせる機器。', priceRange: '50,000〜100,000円' },
];
---

<BaseLayout
  title="福祉用具販売 | 株式会社後藤 福祉事業部 つなぐ"
  description="入浴補助用具・腰掛便座など特定福祉用具を販売。年間10万円まで介護保険適用。"
>
  <main>
    <div class="page-header">
      <div class="container">
        <span class="section-label">Purchase</span>
        <h1 class="page-title">福祉用具販売</h1>
        <p class="page-desc">
          衛生上レンタルに適さない用具を販売。<br />
          年間10万円まで介護保険が適用されます。
        </p>
      </div>
    </div>

    <!-- 介護保険について -->
    <section class="section">
      <div class="container narrow">
        <div class="info-box">
          <h2>特定福祉用具販売とは</h2>
          <p>
            入浴や排泄に使用する福祉用具など、<strong>衛生面の理由からレンタルに適さない用具</strong>が対象です。
            介護保険を利用して購入でき、年間<strong>10万円まで</strong>が支給対象（自己負担1〜3割）。
          </p>
          <p class="info-note">※ 指定事業者からの購入が条件です。"つなぐ"は指定福祉用具販売事業者です。</p>
        </div>
      </div>
    </section>

    <!-- 販売品目 -->
    <section class="section bg-white">
      <div class="container narrow">
        <span class="section-label">Items</span>
        <h2 class="section-title">販売品目</h2>
        <p class="section-subtitle">介護保険対象の特定福祉用具</p>

        <div class="sale-list">
          {saleItems.map((item) => (
            <div class="sale-item">
              <div class="sale-item-header">
                <h3>{item.name}</h3>
                <span class="sale-price">{item.priceRange}</span>
              </div>
              <p>{item.desc}</p>
            </div>
          ))}
        </div>
        <p class="note-text">※ 価格は目安です。自己負担は上記の1〜3割となります。</p>
      </div>
    </section>

    <!-- 購入の流れ -->
    <section class="section">
      <div class="container narrow">
        <span class="section-label">Flow</span>
        <h2 class="section-title">ご購入の流れ</h2>
        <p class="section-subtitle">ケアプランに基づいてご購入いただけます</p>

        <div class="flow-list">
          <div class="flow-item"><span class="flow-num">1</span><div><h3>ご相談</h3><p>ケアマネジャーまたは"つなぐ"に直接ご相談ください。</p></div></div>
          <div class="flow-item"><span class="flow-num">2</span><div><h3>商品選定・ご提案</h3><p>福祉用具専門相談員がお体の状態に合った用具をご提案。</p></div></div>
          <div class="flow-item"><span class="flow-num">3</span><div><h3>ご購入・お届け</h3><p>ご自宅までお届けし、使い方をご説明します。</p></div></div>
          <div class="flow-item"><span class="flow-num">4</span><div><h3>介護保険申請</h3><p>領収書をもとに市区町村へ申請。後日、保険分が払い戻されます。</p></div></div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="sale-cta">
      <div class="container">
        <h2>お気軽にご相談ください</h2>
        <p>どの用具が対象になるか、お見積りなど何でもお問い合わせください。</p>
        <a href="/contact" class="btn-cta-white">
          無料相談・お問い合わせ
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6z" /></svg>
        </a>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .page-header { padding: 120px 32px 56px; background: var(--color-primary); }
  .page-title { font-family: var(--font-serif); font-size: clamp(30px, 4vw, 48px); color: white; margin-bottom: 8px; }
  .page-desc { font-size: 14px; color: rgba(255, 255, 255, 0.65); line-height: 1.8; }
  .page-header :global(.section-label) { color: var(--color-accent); }
  .bg-white { background: white; }
  .narrow { max-width: 800px; margin: 0 auto; }

  .info-box { background: var(--color-accent-lt); border-left: 4px solid var(--color-accent); border-radius: var(--radius-md); padding: 32px 36px; }
  .info-box h2 { font-family: var(--font-serif-jp); font-size: 20px; font-weight: 400; color: var(--color-primary); margin-bottom: 12px; }
  .info-box p { font-size: 14px; color: var(--color-text-mid); line-height: 1.9; margin-bottom: 8px; }
  .info-note { font-size: 12px; color: var(--color-text-lt); margin-bottom: 0; }

  .sale-list { display: flex; flex-direction: column; gap: 0; }
  .sale-item { padding: 24px 0; border-bottom: 1px solid var(--color-border); }
  .sale-item:first-child { border-top: 1px solid var(--color-border); }
  .sale-item-header { display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 8px; gap: 16px; }
  .sale-item-header h3 { font-family: var(--font-serif-jp); font-size: 16px; font-weight: 400; color: var(--color-primary); }
  .sale-price { font-family: var(--font-serif); font-size: 13px; color: var(--color-accent); white-space: nowrap; }
  .sale-item p { font-size: 13px; color: var(--color-text-mid); line-height: 1.8; }
  .note-text { font-size: 12px; color: var(--color-text-lt); margin-top: 16px; }

  .flow-list { display: flex; flex-direction: column; }
  .flow-item { display: flex; gap: 20px; padding: 24px 0; border-bottom: 1px solid var(--color-border); align-items: flex-start; }
  .flow-item:first-child { border-top: 1px solid var(--color-border); }
  .flow-num { width: 40px; height: 40px; background: var(--color-accent); color: white; border-radius: 50%; font-family: var(--font-serif); font-size: 18px; font-style: italic; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
  .flow-item h3 { font-family: var(--font-serif-jp); font-size: 15px; font-weight: 400; color: var(--color-primary); margin-bottom: 4px; }
  .flow-item p { font-size: 13px; color: var(--color-text-mid); line-height: 1.7; }

  .sale-cta { background: linear-gradient(135deg, var(--color-primary) 0%, #001850 100%); padding: 80px 32px; text-align: center; }
  .sale-cta h2 { font-family: var(--font-serif-jp); font-size: clamp(22px, 3vw, 32px); font-weight: 400; color: white; margin-bottom: 12px; }
  .sale-cta p { font-size: 14px; color: rgba(255, 255, 255, 0.6); margin-bottom: 32px; }
  .btn-cta-white { display: inline-flex; align-items: center; gap: 10px; background: white; color: var(--color-primary); padding: 16px 36px; border-radius: var(--radius-sm); font-size: 14px; font-weight: 500; transition: var(--transition-base); box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15); }
  .btn-cta-white:hover { transform: translateY(-2px); box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); }

  @media (max-width: 640px) {
    .page-header { padding: 100px 16px 40px; }
    .info-box { padding: 24px 20px; }
    .sale-item-header { flex-direction: column; gap: 4px; }
  }
</style>
